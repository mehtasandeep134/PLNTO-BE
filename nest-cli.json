{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/PLNTO-BE/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/PLNTO-BE/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/PLNTO-BE",
  "projects": {
    "PLNTO-BE": {
      "type": "application",
      "root": "apps/PLNTO-BE",
      "entryFile": "main",
      "sourceRoot": "apps/PLNTO-BE/src",
      "compilerOptions": {
        "tsConfigPath": "apps/PLNTO-BE/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "products": {
      "type": "application",
      "root": "apps/products",
      "entryFile": "main",
      "sourceRoot": "apps/products/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products/tsconfig.app.json"
      }
    },
    "communication": {
      "type": "application",
      "root": "apps/communication",
      "entryFile": "main",
      "sourceRoot": "apps/communication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/communication/tsconfig.app.json"
      }
    }
  }
}